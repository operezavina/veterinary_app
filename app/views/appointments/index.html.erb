<h1>Listing appointments</h1>

<table>
  <thead>
    <tr>
      <th>Pet</th>
      <th>Visit date</th>
      <th>Rason visit</th>
      <% if (session[:doctor_id] != nil) %>
      <th>Doctor</th>
      <th>Reminder appo</th>
      <th>Customer</th>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.pet.name %></td>
        <td><%= appointment.visit_date %></td>
        <td><%= appointment.rason_visit %></td>
        <% if (session[:doctor_id] != nil) %>
        <td><%= appointment.doctor.name %></td>
        <td><%= appointment.reminder_appo %></td>
        <td><%= appointment.pet.customer %></td>
       <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if (session[:doctor_id] != nil) %>
<%= link_to 'New Appointment', new_appointment_path %>
<% end %>